package poly.inherit;

public class Monster {
	
	private String name; // 이름
	private int	   hp  ; // 체력
	private int    atk ; // 공격력
	private int    def ; // 방어력
	private int    exp ; // 경험치
	
	public Monster(String name, int hp, int atk, int def, int exp) {
		this.name = name;
		this.hp   = hp  ;
		this.atk  = atk ;
		this.def  = def ;
		this.exp  = exp ;
	}

}
